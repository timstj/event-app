# Environment Configuration Template
# Copy this to .env.development for local development
# For production, set these as environment variables in your deployment platform

# Environment
NODE_ENV=development

# Server Configuration
PORT=5001

# Database Configuration (PostgreSQL)
# Option 1: Individual variables (for local development)
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_DATABASE=event-host
DB_PORT=5432

# Option 2: Connection string (for production)
# DATABASE_URL=postgresql://username:password@host:port/database
# Example: postgresql://postgres:admin123@localhost:5432/event-host

# JWT Secret
# Development: any string is fine
# Production: Use a strong random string (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secret_key_here

# Frontend URL (for CORS)
# Development: http://localhost:5500
# Production: https://your-app.netlify.app
FRONTEND_URL=http://localhost:5500

# Logging Level (debug, info, warn, error)
LOG_LEVEL=debug